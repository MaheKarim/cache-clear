{
  "manifest_version": 3,
  "name": "Cache Clear on Reload",
  "version": "1.0",
  "description": "Clear cache every time the page is reloaded.",
  "permissions": [
    "browsingData",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Cache Clear on Reload",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+R",
        "mac": "Command+R"
      },
      "description": "Reload and clear cache"
    },
    "clear_cache_and_reload_f5": {
      "suggested_key": {
        "default": "F5"
      },
      "description": "Reload and clear cache using F5"
    }
  },
  "author": "Mahe Karim",
  "homepage_url": "https://x.com/immahekarim"
}
